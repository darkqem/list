<UserControl x:Class="list.ButtonClose"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:list"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="35">
    <Grid>
        <Button Name="CloseButton" HorizontalAlignment="Center" Height="35" VerticalAlignment="Center" Width="35" Background="Transparent" BorderBrush="Transparent">
            <Path Fill="Black" Data="M 0,0 L 30,30 M 0,30 L 30,0" />
        </Button>
    </Grid>
</UserControl>
